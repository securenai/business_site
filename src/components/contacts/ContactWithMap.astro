---
import settings from "~/config/settings";
import urlencode from "urlencode"
const mapSource = "https://maps.google.com/maps?width=100%&height=600&hl=tr&q="+urlencode(settings.adres)+"&ie=UTF8&t=&z=14&iwloc=B&output=embed";
---
<section class="text-neutral body-font relative">
    <div class="absolute inset-0 bg-neutral-content">
        <iframe 
        style="filter: grayscale(0) contrast(1.5) opacity(0.5);" marginheight="0" marginwidth="0" title="map" scrolling="no" 
        src={mapSource}
        width="100%" height="100%" frameborder="0"></iframe>
    </div>
    <div class="container px-5 py-24 mx-auto flex">
      <div class="sag-kutu">
        <form name="contact" method="POST" data-netlify="true">
        <h2 > {settings.name} </h2>
        <p class="leading-relaxed mb-5 text-neutral"> {settings.adres} </p>
        <div class="relative mb-4">
          <label for="email" class="leading-7 text-sm text-neutral">E-posta</label>
          <input type="email" id="email" name="email" placeholder="adresiniz" >
        </div>
        <div class="relative mb-4">
          <label for="message" class="textarealeading-7 text-sm text-neutral">Message</label>
          <textarea id="message" name="message" placeholder="mesajınız" ></textarea>
        </div> 
        <button type="submit">Gönder</button>
      </form>
      </div>
    </div>
  </section>

  <style>
    .sag-kutu {
        @apply lg:w-1/3 md:w-1/2 bg-base-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md;
    }
    h2{
        @apply text-secondary text-lg mb-1 font-medium ;
    }
    input {
        @apply input input-bordered input-primary ;
        @apply w-full bg-white rounded border border-gray-300 focus:border-primary ;
        @apply focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700;
        @apply py-1 px-3 leading-8 transition-colors duration-200 ease-in-out;
    }
    textarea {
        @apply textarea w-full bg-white rounded border border-gray-300 focus:border-primary focus:ring-2;
        @apply focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6;
        @apply transition-colors duration-200 ease-in-out;
    }
    button {
        @apply text-white bg-primary border-0 py-2 px-6 focus:outline-none hover:bg-primary-focus rounded text-lg;
    }
  </style>